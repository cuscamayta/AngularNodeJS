pipeline {
   agent any

   stages {   
    stage('Dependencies') {
     steps {
        echo  'Installing dependencies ....'
         sh 'npm install'
     }
   }    
    stage('Build') {
     steps {
        echo 'Building...'
        echo "Running ${env.BUILD_ID} ${env.BUILD_DISPLAY_NAME} on ${env.NODE_NAME} and JOB ${env.JOB_NAME}"
        sh 'ng build'
    }
   }
   stage('Test') {
     steps {
         sh 'npm test'
     }
   }
   stage('Lint') {
     steps {
       echo 'verifying...'
        sh 'npm run lint'
     }
   }
  }
}