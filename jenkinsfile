pipeline {
   agent any

   stages {   
    stage('Dependencies') {
     steps {
        echo  'Installing dependencies ....'
        npm i
     }
   }    
    stage('Build') {
     steps {
        echo 'Building...'
        echo "Running ${env.BUILD_ID} ${env.BUILD_DISPLAY_NAME} on ${env.NODE_NAME} and JOB ${env.JOB_NAME}"
        ng build
    }
   }
   stage('Test') {
     steps {
        npm test
     }
   }
   stage('Lint') {
     steps {
       echo 'verifying...'
       npm run lint
     }
   }
  }
}